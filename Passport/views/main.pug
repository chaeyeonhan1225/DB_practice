extends layout

block content
  if(!user)
    fieldset
      legend Login
      if(message)
        h3 #{message}
      label(for="user_id") id
      input(type="text" id="user_id")
      label(for="user_password") password
      input(type="password" id="user_password")
      button(id="login_btn") login
      a(href="/join") 회원가입
  else
    h3 #{user.nick} 님 안녕하세요!
    a(href="/auth/logout") logout
    